<%- include('layout/header') %>

    <% if (message) { %>
        <div id="alert" class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
            <strong><%= message.message %></strong>
        </div>
    <% } %>

    <script>
        $(document).ready(function(){
            // Đợi 3 giây sau đó tự động tắt thông báo
            setTimeout(function(){
                $("#alert").alert('close');
            }, 3000);
        });
    </script>
    <div class="form-container-ls">
        <h2>Đăng ký tài khoản</h2>
        <form action="/signup" method="post">
            <div class="form-group-ls">
                <label for="name">Tên đăng nhập :</label>
                <input type="text" id="name" name="username" placeholder="Enter your name" required autocapitalize="off">                    
            </div>
            <div class="form-group-ls">
                <label for="password">Mật khẩu :</label>
                <input type="password" onkeyup="checkPassword(document.getElementById('password').value)" id="password" name="password" placeholder="password" required>
                <span id="password_message" class="error_message"></span>
            </div>
            <div class="form-group-ls">
                <label for="email">Email :</label>
                <input type="email" onkeyup="checkEmail(document.getElementById('email').value)" id="email" name="email"  placeholder="email" required >
                <span id="email_message" class="error_message"></span>
            </div>
            <p>Bạn đã có tài khoản?<a href="/login">Đăng nhập</a></p>
            <button type="submit" class="submit-btn-ls">Đăng ký</button>
        </form>
    </div>

<%- include('layout/footer') %>
