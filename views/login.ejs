<%- include('layout/header') %>
    <% if (message) { %>
        <div id="alert" class="alert alert-dismissible fade show alert-<%= message.type %>" role="alert">
            <strong><%= message.message %></strong>
        </div>
    <% } %>

    <script>
        $(document).ready(function(){
            // Đợi 3 giây sau đó tự động tắt thông báo
            setTimeout(function(){
                $("#alert").alert('close');
            }, 3000);
        });
    </script>
    <div class="form-container-ls">
        <h2>Đăng nhập</h2>
        <form action="/login" method="post">
            <div class="form-group-ls">
                <label for="name">Tên tài khoản :</label>
                <input type="text" id="name" name="username" placeholder="Enter your name" required autocapitalize="off">
            </div>

            <div class="form-group-ls">
                <label for="password">Mật khẩu :</label>
                <input type="password" id="password" name="password" placeholder="password" required>
            </div>
            <button type="submit" class="submit-btn-ls">Đăng nhập</button>
        </form>
        <p>Bạn chưa có tài khoản? <a href="/signup">Đăng ký</a></p>
    </div>

<%- include('layout/footer') %>
